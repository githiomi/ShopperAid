<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Night application theme. -->
    <style name="Theme.OnlineShoppingAssistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Welcome_NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Main Activity -->
        <item name="mainActivityBackground">@color/black</item>
        <item name="mainActivityProgressBar">@color/colorPrimary</item>
        <item name="mainActivityText">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Window Animation -->
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Universals -->
        <item name="universalBackground">@color/black</item>
        <item name="textInputFieldBackground">@color/textInputFieldBackground</item>
        <item name="textInputFieldText">@color/white</item>
        <item name="loginButtonBackground">@color/colorPrimary</item>
        <item name="textInputFieldHint">@color/white</item>
        <item name="textInputFieldHintAfter">@color/colorPrimary</item>
        <!-- Login Activity -->
        <item name="loginBackground">@color/black</item>
        <item name="loginActivityText">@color/white</item>
        <item name="loginButtonText">@color/white</item>
        <item name="loginProgressBar">@color/colorPrimary</item>
        <!-- Sign Up Activity -->
        <item name="signUpBackground">@color/black</item>
        <item name="signUpActivityText">@color/white</item>
        <item name="signUpButtonBackground">@color/colorPrimary</item>
        <item name="signUpButtonText">@color/white</item>
        <item name="signUpProgressBar">@color/colorPrimary</item>
        <!-- Search Activity -->
        <item name="searchActivityText">@color/white</item>
        <item name="searchButtonBackground">@color/colorPrimary</item>
        <item name="searchButtonText">@color/white</item>
        <!-- Recent Search Activity -->
        <item name="recentSearchDrawable">@color/colorPrimary</item>
        <item name="recentSearchText">@color/colorPrimary</item>
        <item name="recentSearchItemText">@color/white</item>
        <!-- Profile Activity -->
        <item name="profileIcons">@color/white</item>
        <item name="profileAttributeHeaderBackground">@color/black</item>
        <item name="profileAttributeHeaderText">@color/colorPrimary</item>
        <item name="profileAttributeBodyText">@color/white</item>
        <!-- Dark Toolbar -->
        <item name="darkToolbarBackground">@color/black</item>
        <item name="darkToolbarTextColor">@color/white</item>
        <item name="darkToolbarIconTint">@color/white</item>
        <!-- Light Toolbar -->
        <item name="lightToolbarBackground">@color/transparent</item>
        <item name="lightToolbarTextColor">@color/white</item>
        <item name="lightToolbarIconTint">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Window Animation -->
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>