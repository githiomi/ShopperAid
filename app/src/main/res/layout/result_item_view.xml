<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvJumiaItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="20dp"
        android:padding="8dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_moto"
                android:padding="5dp"
                android:src="@drawable/app_logo" />

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productImageView"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/product_name_placeholder"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productName"
                android:layout_margin="4dp"
                android:gravity="start"
                android:padding="4dp"
                android:text="@string/product_price_placeholder"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvInKsh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productPrice"
                android:gravity="start"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/product_price_placeholder"
                android:textColor="@color/darkGrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/productRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvInKsh"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:text="@string/product_rating_placeholder"
                android:textColor="@color/darkGrey" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>