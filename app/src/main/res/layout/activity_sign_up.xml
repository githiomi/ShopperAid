<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/signUpBackground"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Ui.SignUpActivity">

    <ScrollView
        android:id="@+id/signUpScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/adContainer"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivBackToLogin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_spaced_name"
                android:padding="3dp"
                android:src="@drawable/ic_arrow_back" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_moto"
                android:src="@drawable/app_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="@string/sign_up_button_placeholder"
                android:textAllCaps="true"
                android:textColor="?attr/signUpActivityText"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/username_placeholder"
                    android:textColorHint="?attr/textInputFieldHint"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidthFocused="3dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="?attr/textInputFieldHintAfter"
                    app:startIconDrawable="@drawable/ic_profile"
                    app:startIconTint="?attr/textInputFieldHint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edUsername"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/textInputFieldBackground"
                        android:inputType="text"
                        android:textColor="?attr/textInputFieldText"
                        android:textCursorDrawable="@color/colorPrimary"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/email_placeholder"
                    android:textColorHint="?attr/textInputFieldHint"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidthFocused="3dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="?attr/textInputFieldHintAfter"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="?attr/textInputFieldHint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/textInputFieldBackground"
                        android:inputType="textEmailAddress"
                        android:textColor="?attr/textInputFieldText"
                        android:textCursorDrawable="@color/colorPrimary"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/phone_placeholder"
                    android:textColorHint="?attr/textInputFieldHint"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidthFocused="3dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="?attr/textInputFieldHintAfter"
                    app:startIconDrawable="@drawable/ic_phone"
                    app:startIconTint="?attr/textInputFieldHint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/textInputFieldBackground"
                        android:inputType="phone"
                        android:textColor="?attr/textInputFieldText"
                        android:textCursorDrawable="@color/colorPrimary"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/password_placeholder"
                    android:textColorHint="?attr/textInputFieldHint"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidthFocused="3dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/colorPrimary"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="?attr/textInputFieldHintAfter"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="?attr/textInputFieldHint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/textInputFieldBackground"
                        android:inputType="textPassword"
                        android:textColor="?attr/textInputFieldText"
                        android:textCursorDrawable="@color/colorPrimary"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/confirm_password_placeholder"
                    android:textColorHint="?attr/textInputFieldHint"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidthFocused="3dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/colorPrimary"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="?attr/textInputFieldHintAfter"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="?attr/textInputFieldHint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/textInputFieldBackground"
                        android:inputType="textPassword"
                        android:textColor="?attr/textInputFieldText"
                        android:textCursorDrawable="@color/colorPrimary"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:elevation="50dp"
                app:cardBackgroundColor="?attr/signUpButtonBackground"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/btnSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:text="@string/sign_up_button_placeholder"
                    android:textAllCaps="true"
                    android:textColor="?attr/signUpButtonText"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <ProgressBar
                android:id="@+id/signUpProgressBar"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:indeterminate="false"
                android:indeterminateTint="?attr/signUpProgressBar"
                android:progressDrawable="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvBackToLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:padding="5dp"
                android:text="@string/back_to_login"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    </FrameLayout>

</RelativeLayout>