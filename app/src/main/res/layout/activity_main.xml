<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Launcher Background"
        android:scaleType="centerCrop"
        android:src="@drawable/landing_background" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/javaLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:contentDescription="@string/app_logo"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/app_logo" />

    <TextView
        android:id="@+id/appMoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/javaLogo"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/app_moto"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/initialPageProgressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/appMoto"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:indeterminateTint="@color/white"
        android:progressDrawable="@color/white" />

</RelativeLayout>